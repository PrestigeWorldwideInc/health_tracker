<%= form_for(@exercise) do |f| %>
  <% if @exercise.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@exercise.errors.count, "error") %> prohibited this weight from being saved:</h2>

      <ul>
      <% @exercise.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "Jogging" %>
    <%= f.radio_button :name, "Jogging", :value => "Jogging" %>
    <%= f.label :name, "Swimming" %>
    <%= f.radio_button :name, "Swimming", :value => "Swimming" %>
    <%= f.label :name, "Cycling" %>
    <%= f.radio_button :name, "Cycling", :value => "Cycling" %>
    <%= f.label :name, "Muscle Training" %>
    <%= f.radio_button :name, "Muscle Training", :value => "Muscle Training " %>
  </div>

  <div class="field">
    <%= f.label :age, "Age" %>
    <%= f.number_field :age %>
  </div>

  <div class="field">
    <p> Rate your level of exertion </p>
    <%= f.label :exertion, "Low" %>
    <%= f.radio_button :exertion, "Low" %>
    <%= f.label :exertion, "Medium"  %>
    <%= f.radio_button :exertion, "Medium" %>
    <%= f.label :exertion, "High" %>
    <%= f.radio_button :exertion, "High" %>
  </div>

  <div class="field">
    <%= f.label :duration %><br>
    <%= f.number_field :duration %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
