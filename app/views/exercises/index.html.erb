<p id="notice"><%= notice %></p>

<h1>Listing Exercises</h1>

<table>
  <thead>
    <tr>
      <th>Calories Per Minute Burned</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= exercise.calories_burned_per_minute %></td>
        <td><%= exercise.duration %></td>
        <td><%= link_to 'New', exercises_path %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p><%= link_to "Back to the Homepage", root_path %></p>
<p><%= link_to 'New Exercise', new_exercise_path %><p>
