<p id="notice"><%= notice %></p>

<h1>Listing Exercises</h1>

<table>
  <thead>
    <tr>
      <th>Calories Burned</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= calories_lost(@heart_rate) %></td>
        <td><%= exercise.duration %></td>
        <td><%= link_to 'New', exercises_path %></td>
        <td><%= link_to 'Show', exercise %></td>
        <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
        <td><%= link_to 'Destroy', exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="actions">
<p><%= link_to "Homepage", root_path %></p>
</div>
<div class="actions">
<p><%= link_to 'New Exercise', new_exercise_path %><p>
</div>
