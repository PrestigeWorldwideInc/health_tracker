<p id = "notice"><%= notice %></p>
<h1>Calorie Intake</h1>

<table>
  <thead>
    <tr>
      <th>Calories</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @choloric_intake.each do |choloric_intake| %>
      <tr>
        <td><%= choloric_intake.calories %></td>
        <td><%= choloric_intake.date %></td>
        <td><%= link_to 'Show', choloric_intake %></td>
        <td><%= link_to 'Edit', edit_choloric_intake_path(choloric_intake) %></td>
        <td><%= link_to 'Destroy', choloric_intake, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="actions">
<%= link_to 'Enter Calories', new_choloric_intake_path %>
</div>
<div class="actions">
<%= link_to "Dashboard", root_path %>
</div>
